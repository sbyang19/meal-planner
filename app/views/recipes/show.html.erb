<div class="title-container">
  <h1><%= @recipe.name %></h1>
</div>

<h2>Description</h2>
<p><%= simple_format @recipe.description, class: "recipe-description" %></p>

<div>
  <ul class="recipe-actions">
    <li><%= link_to "Back", recipes_path %></li>
    <li><%= link_to "Edit", edit_recipe_path(@recipe) %></li>
    <li><%= button_to "Delete", recipe_path(@recipe), method: :delete %></li>
    </ul>
</div>