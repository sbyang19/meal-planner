<!DOCTYPE html>
<html>
  <head>
    <title>MealPlanner</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
  </head>

  <body>
    <header class="container">
      <nav class="navbar navbar-default">
        <div class="container-fluid">
          <div class="navbar-header">
          <%= link_to "Meal Planner", root_path, class: "navbar-brand" %>
          </div>

          <% if signed_in? %>
            <ul class="nav navbar-nav">
              <li><%= link_to "Meal Plans", meal_plans_path %></li>
              <li><%= link_to "Recipes", recipes_path %></li>
            </ul>

            <ul class="nav navbar-nav navbar-right">
              <li><%= button_to "Sign Out", sign_out_path, method: :delete %>
            </ul>
          <% else %>
            <ul class="nav navbar-nav navbar-right">
              <li><%= link_to "Sign in", sign_in_path %></li>
            </ul>
          <% end %>
        </div>
      </nav>
    </header>

    <section class="container">
      <div id="flash">
        <% flash.each do |key, value| %>
          <div class="flash alert <%= alert_class(key) %>"><%= value %></div>
        <% end %>
      </div>
    <%= yield %>
    </section>
  </body>
</html>
